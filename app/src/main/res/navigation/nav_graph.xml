<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cinedex.UI.Fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/ly_home_fragment">

        <action
            android:id="@+id/action_homeFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"

        android:name="com.example.cinedex.UI.Fragments.MovieDetailFragment"

        android:label="Detalle"
        tools:layout="@layout/ly_movie_detail">

        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.cinedex.UI.Fragments.SearchFragment"
        android:label="Buscar"
        tools:layout="@layout/ly_fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cinedex.UI.Fragments.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/ly_fragment_profile" />

</navigation>