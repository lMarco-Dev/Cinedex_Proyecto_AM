<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D4AF37"
                android:endColor="#B8860B"
                android:angle="90" />
            <corners android:radius="28dp" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFD700"
                android:centerColor="#E6BE8A"
                android:endColor="#B8860B"
                android:angle="90" />
            <corners android:radius="28dp" />
            <shadowColor android:color="#66000000"/>
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</selector>
